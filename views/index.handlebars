<h1>Burgers</h1>
<div class="col-xs-6">
<ul class="list-group">
  {{#each burger}}
    {{#unless this.devoured}}
      <li class="list-group-item">
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="burger_name" value="{{this.burger_name}}">
          <button type="submit" class="btn btn-default">Eat it!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

